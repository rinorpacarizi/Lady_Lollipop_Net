@model Lady_Lollipop.Models.Drink

@{
    ViewData["Title"] = "Delete a drink";
}
<head>
    <link rel="stylesheet" href="~/css/drinks.css" />
</head>
<h1 class="h1-create-edit">Delete a drink</h1>
<hr style="border: 1px solid #fd4b4b9e;" />
<div>

    <div class="form-group text-center">
        <img class="img-delete" id="PicturePreview" />
    </div>
    <div>
        <div class="form-group ">
            <input class="input-create form-control" style="display:none;" asp-for="Picture" />
        </div>
        <div class="form-group div-create">
            <p class="name-delete">
                @Html.DisplayFor(model => model.Name)
            </p>
        </div>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <p class="p-delete">Are you sure u want to delete it?</p>
        <div class="form-group delete-form-div">
            <a class="cancel-delete" asp-action="index">Cancel</a>
            <input type="submit" value="Delete" class="submit-delete" />
        </div>


    </form>
</div>


@section Scripts {
    <script>
            $(document).ready(function () {
                var output = document.getElementById('PicturePreview');
                output.src = $('#Picture').val();
            })
    </script>
}